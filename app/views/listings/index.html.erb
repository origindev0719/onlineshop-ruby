
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url(:medium) %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= listing.price %></p>
          <%= link_to 'Show', listing, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-warning" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
     <br>
  </div>
    <% end %>
</div>
<br>

<%= link_to 'New Listing', new_listing_path %>
